
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div class="container">
    <!--Nuevo grid-->
    <div class="container" style="width:80%">
        <div class="form-horizontal">
            <!--Sección A-->
            <div class="panel panel-default" id="Seccion_A">
                <div class="panel-heading">
                    <div class="badge">A</div> Ubicación geográfica
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        <!--Código de Sitio-->
                        <label for="CodigoSitio" class="control-label col-md-2">Código de sitio</label>
                        <div class="col-md-10">
                            <input id="CodigoSitio" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="CoordX" class="control-label col-md-2">Coordenada X</label>
                        <div class="col-md-2">
                            <input id="CoordX" class="form-control" />
                        </div>
                        <label for="CoordY" class="control-label col-md-2">Coordenada Y</label>
                        <div class="col-md-2">
                            <input id="CoordY" class="form-control" />
                        </div>
                        <label for="Altitud" class="control-label col-md-2">Altitud</label>
                        <div class="col-md-2">
                            <input id="Altitud" class="form-control" />
                        </div>
                    </div>
                </div>
            </div>
            <!--Sección B-->
            <div class="panel panel-default" id="Seccion_B">
                <div class="panel-heading">
                    <div class="badge">B</div> Características físicas del entorno del sitios de entierro
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        <label for="Propiedad" class="control-label col-md-2">Propiedad</label>
                        <div class="col-md-2">
                            <select id="Propiedad" class="form-control">
                                <option value="1">Privada</option>
                                <option value="2">Pública</option>
                                <option value="3">Comunal</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
            <!--Sección C-->
            <div class="panel panel-default" id="Seccion_C">
                <div class="panel-heading">
                    <div class="badge">C</div> Información testimonial sobre sitios de entierro y victimas
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-condensed table-striped">
                            <thead>
                                <tr>
                                    <th>Nombres</th>
                                    <th>Apellido Paterno</th>
                                    <th>Apellido Materno</th>
                                    <th>&nbsp;</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td><input id="Nombres_Inf" class="form-control" placeholder="Nombres" /></td>
                                    <td><input id="ApellidoPaterno_Inf" class="form-control" placeholder="Apellido Paterno" /></td>
                                    <td><input id="ApellidoMaterno_Inf" class="form-control" placeholder="Apellido Materno" /></td>
                                    <td><input class="btn btn-default" type="button" id="add" value="Agregar" /></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <hr />
                    <div class="form-group">
                        <label for="Antecedentes" class="control-label col-md-2">Antecedentes</label>
                        <div class="col-md-10">
                            <textarea id="Antecedentes" class="form-control" rows="3"></textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="RelatoAcontecimientos" class="control-label col-md-2">Relato de los Acontecimientos</label>
                        <div class="col-md-10">
                            <textarea id="RelatoAcontecimientos" class="form-control" rows="3"></textarea>
                        </div>
                    </div>
                    <hr />
                    <div class="form-group">
                        <label for="FechaEvento" class="control-label col-md-2">Fecha del evento</label>
                        <div class="col-md-10">
                            <input id="FechaEvento" class="form-control" type="date" />
                        </div>
                    </div>
                </div>
            </div>
            <!--Sección D-->
            <div class="panel panel-default" id="Seccion_D">
                <div class="panel-heading">
                    <div class="badge">D</div> Circunstancias de la inhumación
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        <label for="FechaInhumacion" class="control-label col-md-2">Fecha de inhumación</label>
                        <div class="col-md-4">
                            <input id="FechaInhumacion" class="form-control" type="date" />
                        </div>
                        <label for="NumeroVictimas" class="control-label col-md-2">N° de víctimas</label>
                        <div class="col-md-4">
                            <input id="NumeroVictimas" class="form-control" type="number" />
                        </div>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-condensed table-striped">
                            <thead>
                                <tr>
                                    <th>Nombres</th>
                                    <th>Apellido Paterno</th>
                                    <th>Apellido Materno</th>
                                    <th>&nbsp;</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td><input id="Nombres_Inf" class="form-control" placeholder="Nombres" /></td>
                                    <td><input id="ApellidoPaterno_Inf" class="form-control" placeholder="Apellido Paterno" /></td>
                                    <td><input id="ApellidoMaterno_Inf" class="form-control" placeholder="Apellido Materno" /></td>
                                    <td><input class="btn btn-default" type="button" id="add2" value="Agregar" /></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <!--Sección E-->
            <div class="panel panel-default" id="Seccion_E">
                <div class="panel-heading">
                    <div class="badge">E</div> Posibles víctimas
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-condensed table-striped">
                            <thead>
                                <tr>
                                    <th>Id_Victima</th>
                                    <th>CodigoVictima</th>
                                    <th>NA</th>
                                    <th>Sexo</th>
                                    <th>Edad</th>
                                    <th>Procedencia</th>
                                    <th>Familia</th>
                                    <th>PresuntaAfiliacion</th>         
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>